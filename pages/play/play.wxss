/* 设置歌曲播放页面的整体区域 */
.playContent{
    width: 100%;
    position: absolute;
}
/* 设置背景图图片的样式 */
.back_img{
    width: 100%;
    height: 100%;
    position: absolute;
}
.back_img image{
    width: 100%;
    height: 100%;
    /* 设置透明度 */
    opacity: 0.3;
}

/* 设置歌曲信息的区域 */
.songInfo{
    width: 100%;
    height: 120rpx;
    position: absolute;
    margin-top: 70rpx;
}
/* 设置歌曲名称展示区域 */
.songName{
    width: 100%;
    height: 70rpx;
}
.songName text{
    color: crimson;
    font-size: 50rpx;
    display: block;
    text-align: center;
}
/* 设置歌手以及专辑名称展示区域 */
.singer{
    width: 100%;
    height: 50rpx;
}
.singer text{
    color: rgb(20, 83, 220);
    font-size: 35rpx;
    display: block;
    text-align: center;
}

/* 设置黑胶封面以及歌词的区域 */
.content{
  width: 600rpx;
  height: 800rpx;
  margin: 260rpx 70rpx;
  
}

.cd-swiper{
    width: 560rpx;
    height: 780rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
}

/* 设置黑胶封面 */
.cd-image{
    width: 500rpx;
    height: 500rpx;
}

.cd-image image{
    width: 300rpx;
    height: 300rpx;
    margin-top: 140rpx;
    margin-left: 30rpx;
    border: 100rpx #1E1E1E solid;
    border-radius: 50%;
    /* 调用动画效果 */
    animation: xuanzhuan 3s linear infinite;
}

/* 设置一个动画效果 */
@keyframes xuanzhuan{
    from{rotate: 0deg;}
    to{rotate: 360deg;}
}

/* 歌词 */
.lyric_view text{
    display: block;
}
.cd_lyric{
    height: 780rpx;
    font-size: 32rpx;
    line-height: 50rpx;
    text-align: center;
    color: rgb(10, 10, 10);
}
/* 设置当前播放的歌词行颜色变红 */
.currentIndex{
    color: red;
}

/* 设置歌曲播放页面的控制栏目区域 */
.controlers{
    width: 100%;
    height: 120rpx;
    background-color: #87CEFA;
    position: absolute;
    bottom: 0rpx;
}

.controlers image{
    width: 100rpx;
    height: 100rpx;
    margin-left: 70rpx;
    margin-top: 10rpx;
}

/* 设置歌曲播放进度条的区域 */
.progress{
    width: 100%;
    height: 60rpx;
    position: absolute;
    bottom: 150rpx;
    display: flex;
}

.playTime .endTime{
    width: 15%;
    height: 40rpx;
}
.jindu{
    width: 70%;
    height: 40rpx;
}