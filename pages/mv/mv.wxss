
.mv{
    width: 100%;
    height: 500rpx;
}

.mv video{
    width: 100%;
    height: 500rpx;
}

/* 设置文字的样子 */
.p{
    width: 100%;
    height: 60rpx;
    margin-top: 20rpx;
}
.p text{
    font-size: 45rpx;
    color: black;
    font-weight: 300;
}

/* 设置MV最新评论的区域 */
.newComment{
  width: 100%;
  height: 120rpx;
  margin-top: 30rpx;
  display: flex;
  background-color: #87CEFA;
}

/* 左边头像区域 */
.left{
    width: 120rpx;
    height: 120rpx;
}
.left image{
    width: 110rpx;
    height: 110rpx;
    margin: 5rpx 5rpx;
    border-radius: 20rpx;
}
/* 右侧区域 */
.right{
    width: 100%;
    height: 120rpx;
}

/* 上 */
.top{
    width: 100%;
    height: 30rpx;
}
.top text{
    display: block;
    font-size: 30rpx;
    margin-left: 30rpx;
    line-height: 25rpx;
    font-weight: 800;
}
/* 中间 */
.center{
    width: 100%;
    height: 70rpx;
    overflow: hidden;
}
.center text{
    display: block;
    font-size: 25rpx;
    margin-left: 40rpx;
    line-height: 30rpx;
    color: darkcyan;
}
/* 下 */
.bottom{
    width: 100%;
    height: 20rpx;
}
.bottom text{
    display: block;
    font-size: 18rpx;
    margin-left: 30rpx;
    line-height: 20rpx;
    color:#865454;
}